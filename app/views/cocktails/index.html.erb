<div class="container">
  <h1 class="header mt-3">Cocktails:</h1>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-4">
        <div class="card center">
          <div class="card-body">
              <% if cocktail.photo.attached? %>
                <%= cl_image_tag cocktail.photo.key, height: 400, width: 600, crop: :fill %>
              <% else %>
                <%= image_tag "default_cocktail_image.jpg", alt: "Le Wagon", width: 328, crop: :fill %>
              <% end %>
              <p class="card-text"> <%= link_to "#{cocktail.name}", cocktail_path(cocktail.id) %> </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="text-center">
    <h2><b> <%= button_to "Create new cocktail!", new_cocktail_path, method: :get, class: "btn-lg btn-primary" %> </b></h2>
  </div>
</div>
